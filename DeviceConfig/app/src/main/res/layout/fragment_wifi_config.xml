<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.WifiConfigFragment"
    >
    <!--tools:context=".ui.fragment.WifiScanListFragment"-->
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/wifi_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/setup_instructions"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp" />

    <include
        android:id="@+id/layout_add_network"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/generic_margin"
        android:layout_below="@+id/wifi_message"
        layout="@layout/include_layout_add_network"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/bottom_button_width"
        android:layout_height="@dimen/bottom_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/generic_margin"
        android:layout_marginBottom="@dimen/generic_margin"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:icon="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:iconTint="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="@dimen/bottom_button_height"
        android:layout_height="@dimen/bottom_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/generic_margin"
        android:layout_marginBottom="@dimen/generic_margin"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:icon="@drawable/ic_baseline_arrow_forward_ios_24"
        app:iconTint="@android:color/white" />
</RelativeLayout>